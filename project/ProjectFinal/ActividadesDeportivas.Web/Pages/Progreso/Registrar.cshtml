@page
@model ProgresoRegistrarModel
@{
    ViewData["Title"] = "Registrar Progreso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i> Registrar Progreso
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Progreso.Fecha" class="form-label fw-bold">Fecha</label>
                                <input type="date" class="form-control" asp-for="Progreso.Fecha" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Progreso.Peso" class="form-label fw-bold">Peso (kg)</label>
                                <input type="number" class="form-control" asp-for="Progreso.Peso" step="0.1" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Progreso.IMC" class="form-label fw-bold">IMC</label>
                                <input type="number" class="form-control" asp-for="Progreso.IMC" step="0.1" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Progreso.GrasaCorporal" class="form-label fw-bold">Grasa Corporal (%)</label>
                                <input type="number" class="form-control" asp-for="Progreso.GrasaCorporal" step="0.1" required />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-page="Index">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button class="btn btn-success px-4" type="submit">
                                <i class="bi bi-check-circle me-1"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
